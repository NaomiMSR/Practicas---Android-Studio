<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuintaActivity"
    android:background="#FFF58A"
    >

<!--    Pregunta uno -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#FFB100"
        android:text="Queremos conocer tu opinión"
        android:textSize="32sp"
        tools:ignore="HardcodedText"
        android:textColor="@color/white"
        />

<!--    Respuesta de texto largo -->
    <EditText
        android:id="@+id/textarea"
        android:layout_width="match_parent"
        android:layout_height="164dp"
        android:layout_marginTop="100dp"
        android:background="#FFE538"
        android:gravity="top|start"
        android:hint="Escribe tu texto aquí..."
        android:inputType="textMultiLine"
        android:lines="6"
        android:maxLines="10"
        android:minLines="3"
        android:overScrollMode="always"
        android:scrollbars="vertical"
        android:scrollHorizontally="false"
        />

</FrameLayout>
