<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="apps.firstapp.FirstAppActivity"
    android:background="#783449">

<!--    Primera pregunta prueba-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="100dp"
        android:background="#9DB6E6"
        android:text="Hola mundo \n ¿Cómo estás el día de hoy?"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Escriba aquí su nombre completo"
        android:inputType="text"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="30dp"
        android:background="@color/white"
        />

<!--    Cinco preguntas de tarea-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="16dp"
        android:layout_marginTop="150dp">

        <!-- Primera pregunta-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="¿Cómo te llamas?"
            android:textSize="18sp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Escriba aquí su nombre completo"
            android:inputType="text"
            android:background="@color/white"
            />

        <!-- Segunda pregunta-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="¿Cuántos años tienes?"
            android:textSize="18sp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Escriba aquí su edad"
            android:inputType="number"
            android:background="@color/white"
            />

        <!-- Tercera pregunta-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="¿Cuál es tu película favorita?"
            android:textSize="18sp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Escriba aquí su película favorita"
            android:inputType="text"
            android:background="@color/white"
            />

        <!-- Cuarta pregunta-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="¿Tienes hobbies?"
            android:textSize="18sp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Escriba aquí sus hobbies"
            android:inputType="text"
            android:background="@color/white"
            />

        <!-- Quinta pregunta-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="¿Cuál es tu canción favorita?"
            android:textSize="18sp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Escriba aquí su canción favorita"
            android:inputType="text"
            android:background="@color/white"
            />

    </LinearLayout>

</FrameLayout>
