<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".secondActivity"
    android:background="#EC94ED"
    >

    <!--Actividad en clase - patrón de preguntas y respuestas-->
    <!--    Primera pregunta-->
    <TextView
        android:id="@+id/pre1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#9E4FDC"
        android:text="Además de 2+2= 4, ¿Qué otras opciones hay para llegar a ese resultado?"
        android:textSize="24dp"
        />

    <!--    Respuesta de dos opciones-->
    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#B698E9"
        android:layout_marginTop="120dp"
        >

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radio_option1"
        android:text="8/2"
        android:textSize="30dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radio_option2"
        android:text="2*2"
        android:textSize="30dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        />

    </RadioGroup>

    <!--    Segunda pregunta-->
    <TextView
        android:id="@+id/pre2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:text="¿Cuantas fases tiene la luna?"
        android:textSize="24dp"
        android:background="#4F69DC"
        />

    <!--    Respuesta de tres opciones-->
    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#98A7E9"
        android:layout_marginTop="240dp"
        >

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radio_option3"
        android:text="Luna Llena"
        android:textSize="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radio_option4"
        android:text="Cuarto menguante"
        android:textSize="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radio_option5"
        android:text="Luna nueva"
        android:textSize="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        />

    </RadioGroup>

    <!--    Tercera pregunta-->
    <TextView
        android:id="@+id/pre3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="360dp"
        android:text="¿Series o peliculas?"
        android:textSize="24dp"
        android:background="#DC4F77"
        />

    <!--    Respuesta de dos opciones-->
    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#AF7F7F"
        android:layout_marginTop="400dp"
        >

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radio_option6"
            android:text="Series"
            android:textSize="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radio_option7"
            android:text="Pelicula"
            android:textSize="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            />

    </RadioGroup>

    <!--    Cuarta pregunta-->
    <TextView
        android:id="@+id/pre4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="460dp"
        android:text="¿Team calor o team frío?"
        android:textSize="24dp"
        android:background="#DC724F"
        />

    <!--    Respuesta de dos opciones-->
    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FF8A1A"
        android:layout_marginTop="500dp"
        >

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radio_option8"
            android:text="Calor"
            android:textSize="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radio_option9"
            android:text="Frío"
            android:textSize="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            />

    </RadioGroup>

    <!--    Quinta pregunta-->
    <TextView
        android:id="@+id/pre5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="550dp"
        android:text="¿Qué película prefieres?"
        android:textSize="24dp"
        android:background="#8CDC4F"
        />

    <!--    Respuesta de 3 opciones-->
    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#C2E998"
        android:layout_marginTop="590dp"
        >

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radio_option10"
            android:text="Iron Man 1"
            android:textSize="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radio_option11"
            android:text="Capitán América 1"
            android:textSize="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radio_option12"
            android:text="Thor 1"
            android:textSize="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            />

    </RadioGroup>

</FrameLayout>
